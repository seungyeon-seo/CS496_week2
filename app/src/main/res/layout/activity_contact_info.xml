<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".contacts.ContactInfoActivity">

<ImageView
    android:id="@+id/phone_show_image"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="100dp"
    android:src="@drawable/image_default" />

    <TextView
        android:id="@+id/phone_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="김뫄뫄"
        android:textAlignment="center"
        android:textColor="@color/fab_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
    android:id="@+id/phone_show_phone_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="010-0000-0000"
    android:textSize="20sp"
    android:textAlignment="center"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:textColor="@color/fab_color" />

    <ImageButton
        android:id="@+id/phone_show_phone_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/callbutton" />
</LinearLayout>